<style>
  .edit-profile-wrapper {    max-width: 600px;
    margin: 40px auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    font-family: Arial, sans-serif;
  }
  .edit-profile-wrapper h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #333;
  }
   .form-group {
    margin-bottom: 18px;
  }
  label {
    font-weight: bold;
    margin-bottom: 6px;
    display: block;
    color: #444;
  }
   input[type="text"],
  textarea,
  input[type="file"] {
    width: 100%;
    padding: 10px 12px;
    font-size: 14px;
    border-radius: 6px;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }
  .submit-btn {
    background-color: #28a745;
    color: white;
    padding: 12px;
    font-size: 15px;
    border: none;
    width: 100%;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }
  .submit-btn:hover {
   background-color: #218838;
  }
</style>
 
<div class="edit-profile-wrapper">
<h2>Edit Your Profile</h2>
 
  <%= form_with model: @user, local: true, html: { multipart: true } do |form| %>
<div class="form-group">
<%= form.label :username %>
<%= form.text_field :username %>
</div>
 
    <div class="form-group">
<%= form.label :bio %>
<%= form.text_area :bio %>
</div>
 
    <div class="form-group">
<%= form.label :profile_picture %> (Upload Image)
<%= form.file_field :profile_picture %>
</div>
 
    <%= form.submit "Update", class: "submit-btn" %>
<% end %>
</div>

 