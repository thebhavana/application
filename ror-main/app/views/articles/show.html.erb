<style>
  .article-container {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    border: 2px solid #ddd;
    border-radius: 8px;
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
  }
  .article-container h1 {
    font-size: 28px;
    margin-bottom: 10px;
    color: #333;
  }
  .article-container p {
    font-size: 16px;
    margin: 6px 0;
    color: #555;
  }
  .btn {
    padding: 8px 14px;
    text-decoration: none;
    color: white;
    border-radius: 4px;
    margin-right: 10px;
    display: inline-block;
  }
  .btn-edit {
    background-color: #27ae60;
  }
  .btn-delete {
    background-color: #e74c3c;
  }
  .btn:hover {
    opacity: 0.9;
  }
  .actions {
    margin-top: 20px;
  }
</style>
 
<div class="article-container">
<h1><%= @article.title %></h1>
<h1><%= @article.body %></h1>
 
  <%# <p><strong>Word count:</strong> <%= @word_count %>
<%# <p><strong>Summary:</strong> <%= @intro %>
<%# <p><strong>Uppercase Title:</strong> <%= @article.title.upcase %>
<%# <p><strong>Uppercase Body:</strong> <%= @article.body.upcase %>
 
  <div class="actions">
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-edit" %>
<%= link_to "Delete", article_path(@article), method: :delete, 
data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-delete" %>
</div>
</div>

 