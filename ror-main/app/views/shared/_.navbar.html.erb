<style>
    .navbar {

  display: flex;

  flex-wrap: wrap;

  justify-content: space-between;

  align-items: center;

  background-color: #0d6efd;

  color: white;

  padding: 10px 20px;

}
 
.navbar a {

  color: white;

  text-decoration: none;

  margin-right: 15px;

  font-weight: 500;

}
 
.navbar a:hover {

  text-decoration: underline;

}
 
.navbar-brand .brand-link {

  font-size: 20px;

  font-weight: bold;

}
 
.navbar-links {

  display: flex;

  flex-wrap: wrap;

  gap: 10px;

  align-items: center;

}
 
@media (max-width: 768px) {

  .navbar {

    flex-direction: column;

    align-items: flex-start;

  }
 
  .navbar-links {

    flex-direction: column;

    align-items: flex-start;

    margin-top: 10px;

  }
 
  .navbar a {

    margin: 5px 0;

  }

}

.main-container {
  padding: 20px;
}
</style> 

<nav class="navbar">
<div class="navbar-brand">
<%= link_to "YourApp", root_path, class: "brand-link" %>
</div>
 
  <div class="navbar-links">
<% if user_signed_in? %>
<span>Hello, <%= current_user.username || current_user.email %></span>
<%= link_to "Edit Profile", edit_user_path(current_user) %>
<%= link_to "My Articles", current_user %>
<%= link_to "Liked Articles", liked_articles_path %>
<%= link_to "Bookmarked Articles", bookmarked_articles_path %>
<%= link_to "Log Out", destroy_user_session_path, method: :delete %>
 
      <% if current_user.admin? %>
<%= link_to "Admin Dashboard", admin_dashboard_path %>
<% end %>
<% else %>
<%= link_to "Login", new_user_session_path %>
<% end %>
</div>
</nav>

 